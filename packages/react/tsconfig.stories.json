{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "tsBuildInfoFile": "./tsc-build/tsconfig.storybook.tsbuildinfo",
    "composite": false,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "incremental": false,
    "types": [
