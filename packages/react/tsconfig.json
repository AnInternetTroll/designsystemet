{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./tsc-build",
    "tsBuildInfoFile": "./tsc-build/tsconfig.tsbuildinfo",
    "emitDeclarationOnly": false,
    "composite": false,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "incremental": true,
    "types": [
      "./declarations.d.ts",
      "../theme/brand/types.d.ts",
      "../../apps/storybook/story-utils/type-extensions.d.ts"
    ]
  },
  "include": ["./src"],
  "exclude": ["./dist", "./src/**/*.stories.ts*", "./src/**/*.test.ts*"]
}
