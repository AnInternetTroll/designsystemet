{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components": [
        "components"
      ],
      "@layouts": [
        "layouts"
      ],
      "@blog": [
        "components/Blog"
      ]
    },
    "jsx": "preserve",
    "target": "ES2017",
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
