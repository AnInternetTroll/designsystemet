  "scripts": {
    "storybook": "start-storybook -p 6006",
    "storybook:clean": "start-storybook -p 6006 --no-manager-cache",
    "watch": "tsdx watch",
    "core:watch": "npx lerna run watch --scope=@digdir/ds-core-react",
    "core:build": "npx lerna run build --scope=@digdir/ds-core-react",
    "core:test": "npx lerna run test --scope=@digdir/ds-core-react",
    "web:watch": "npx lerna run watch --scope=@digdir/ds-web-react",
    "web:build": "npx lerna run build --scope=@digdir/ds-web-react",
    "web:test": "npx lerna run test --scope=@digdir/ds-web-react",
    "tokens:build": "npx lerna run build --scope=@digdir/ds-tokens",
    "logo:build": "npx lerna run build --scope=@digdir/ds-logo",
    "test": "tsdx test --passWithNoTests",
    "build": "lerna run build",
    "build:docs": "build-storybook -o ./docs",
    "lint": "yarn lint:scss && yarn lint:ts",
    "lint:scss": "npx stylelint \"**/*.scss\" --config='./stylelint.config.js'",
    "lint:ts": "yarn eslint .",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lerna:changed": "yarn build && lerna version --no-push --conventional-commits --no-private",
    "lerna:publish": "lerna publish from-git"
  }
